local CZ0 = {}
local TweenService = game:GetService("TweenService")

function CZ0:CreateWindow(options)
    if not options or not options.Size then return nil end

    -- Check if the animation should be used. Defaults to true if not specified.
    local useAnimation = options.LoadingAnimation ~= false

    local screenGui = Instance.new("ScreenGui", game:GetService("CoreGui"))
    screenGui.Name = game:GetService("HttpService"):GenerateGUID(false)
    screenGui.ResetOnSpawn = false

    local window = Instance.new("Frame")
    window.Name = game:GetService("HttpService"):GenerateGUID(false)
    window.Size = options.Size
    window.AnchorPoint = Vector2.new(0.5, 0.5)
    window.Position = UDim2.new(0.5, 0, 0.5, 0)
    window.BackgroundColor3 = Color3.new(0, 0, 0)
    window.BorderSizePixel = 0
    window.Parent = screenGui

    Instance.new("UICorner", window).CornerRadius = UDim.new(0, 6)

    -- Only run the animation if the setting is true
    if useAnimation then
        -- Set the initial state for the animation (smaller and transparent)
        local initialSize = UDim2.new(
            options.Size.X.Scale * 0.8,
            options.Size.X.Offset * 0.8,
            options.Size.Y.Scale * 0.8,
            options.Size.Y.Offset * 0.8
        )
        window.Size = initialSize
        window.Transparency = 1

        -- Tween to the final state (original size and fully opaque)
        local tweenInfo = TweenInfo.new(0.6, Enum.EasingStyle.Quint, Enum.EasingDirection.Out)
        local goal = { Size = options.Size, Transparency = 0 }
        local openTween = TweenService:Create(window, tweenInfo, goal)
        openTween:Play()
    end

    local isDragging = false
    local dragStart, startPos

    local function startDrag(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            isDragging = true
            dragStart = input.Position
            startPos = window.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    isDragging = false
                end
            end)
        end
    end

    local function updateDrag(input)
        if isDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            window.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end

    window.InputBegan:Connect(startDrag)
    game:GetService("UserInputService").InputChanged:Connect(updateDrag)

    return { ScreenGui = screenGui, Window = window }
end

return CZ0
